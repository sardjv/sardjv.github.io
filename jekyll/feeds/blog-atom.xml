---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
  <title>SARD JV Limited</title>
  <link href="http://www.sardjv.co.uk/"/>
  <link type="application/atom+xml" rel="self" href="http://www.sardjv.co.uk/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://www.sardjv.co.uk/</id>
  <author>
    <name>SARD JV Limited</name>
    <email>info@sardjv.co.uk</email>
  </author>

  {% for post in site.categories.blog %}
    {% assign author = site.data.people[post.author] %}
    <entry>
      <id>http://www.sardjv.co.uk{{ post.id }}</id>
      <link type="text/html" rel="alternate" href="http://www.sardjv.co.uk{{ post.url }}"/>
      <title>{{ post.title }}</title>
      <published>{{ post.date | date_to_xmlschema }}</published>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <author>
        <name>{{ author.first_name }} {{ author.last_name }}</name>
        <uri>http://www.sardjv.co.uk/{{author.profile_page}}</uri>
      </author>
      <content type="html">{{ post.content | xml_escape }}</content>
      <content type="image/jpg" src="http://www.sardjv.co.uk/images/{{post.image}}" />
    </entry>
  {% endfor %}
 
</feed>